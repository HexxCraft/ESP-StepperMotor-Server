    "keywords": "stepper,motor,http,websocket,webserver,rest,api,serial,controller,server",
    "authors": {
        "name": "Paul Kerspe",
        "maintainer": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pkerspe/ESP-StepperMotor-Server.git"
    },
    "version": "0.2.2",
    "license": "MIT",
    "frameworks": "arduino",
    "platforms": [
        "espressif32"
    ],
    "dependencies": [{
            "name": "ESP Async WebServer",
            "platforms": "espressif32"
        },
        {
            "name": "ESP-FlexyStepper",
            "platforms": "arduino"
        },
        {
            "name": "ArduinoJSON",
            "platforms": "arduino"
